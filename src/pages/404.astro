---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../index.css';
---

<BaseLayout title="404 - Không tìm thấy trang">
  <div class="min-h-screen flex items-center justify-center bg-taisan-background-light">
    <div class="text-center px-4">
      <h1 class="text-6xl font-serif text-taisan mb-4">404</h1>
      <h2 class="text-2xl font-serif text-gray-800 mb-4">Không tìm thấy trang</h2>
      <p class="text-gray-600 mb-8">Xin lỗi, trang bạn đang tìm kiếm không tồn tại.</p>
      <a 
        href="/" 
        class="inline-block bg-taisan hover:bg-taisan-light text-white font-medium py-3 px-6 rounded-md transition-all duration-300"
      >
        Về trang chủ
      </a>
    </div>
  </div>
</BaseLayout>

