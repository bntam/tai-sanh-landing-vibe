---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../index.css';
import { getBlogPosts } from '../utils/cms';
import { calculateReadingTime } from '../utils/blog';

const posts = await getBlogPosts();

// Separate featured and regular posts
const featuredPosts = posts.filter(post => post.featured).slice(0, 2);
const regularPosts = posts.filter(post => !post.featured);

// Get unique categories
const categories = [...new Set(posts.map(post => post.category))];
---

<BaseLayout title="Bài viết - Phòng Khám YHCT Tái Sanh" description="Chia sẻ kiến thức về y học cổ truyền và sức khỏe">
  <div class="min-h-screen bg-gradient-to-b from-taisan-cream/30 to-white">
    <!-- Header spacing -->
    <div class="h-20"></div>

    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-taisan to-taisan-dark text-white py-16">
      <div class="container-custom text-center">
        <h1 class="text-4xl md:text-5xl font-serif font-bold mb-4">Bài viết</h1>
        <p class="text-xl text-white/90 max-w-2xl mx-auto">
          Chia sẻ kiến thức về y học cổ truyền và sức khỏe
        </p>
      </div>
    </section>

    <div class="container-custom py-12">
      <!-- Featured Posts -->
      {featuredPosts.length > 0 && (
        <section class="mb-16">
          <h2 class="text-2xl font-serif font-bold text-gray-900 mb-6 flex items-center gap-2">
            <svg class="w-6 h-6 text-taisan" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            Bài viết nổi bật
          </h2>
          <div class="grid md:grid-cols-2 gap-8">
            {featuredPosts.map((post) => (
              <article class="group bg-white rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all border border-taisan/10">
                {post.image && (
                  <div class="relative overflow-hidden h-64">
                    <img
                      src={post.image}
                      alt={post.title}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                      loading="lazy"
                      decoding="async"
                    />
                    <div class="absolute top-4 left-4">
                      <span class="inline-block bg-taisan text-white text-sm font-semibold px-4 py-2 rounded-full shadow-lg">
                        Nổi bật
                      </span>
                    </div>
                  </div>
                )}
                <div class="p-8">
                  <div class="flex items-center gap-3 mb-4">
                    <span class="text-sm font-medium text-taisan bg-taisan/10 px-3 py-1 rounded-full">
                      {post.category}
                    </span>
                    <span class="text-sm text-gray-500">
                      {new Date(post.date).toLocaleDateString('vi-VN')}
                    </span>
                    <span class="text-sm text-gray-500 flex items-center gap-1">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {calculateReadingTime(post.content)} phút
                    </span>
                  </div>
                  <h2 class="text-2xl font-serif font-bold text-gray-900 mb-3 group-hover:text-taisan transition-colors">
                    {post.title}
                  </h2>
                  <p class="text-gray-600 mb-4 line-clamp-3 leading-relaxed">
                    {post.description}
                  </p>
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-500">Bởi {post.author}</span>
                    <a
                      href={`/blog/${post.slug}`}
                      class="inline-flex items-center gap-2 text-taisan hover:text-taisan-light font-semibold transition-colors group"
                    >
                      Đọc thêm
                      <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                      </svg>
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </section>
      )}

      <!-- All Posts -->
      <section>
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-2xl font-serif font-bold text-gray-900">Tất cả bài viết</h2>
          {/* Category filter could be added here */}
        </div>

        {posts.length === 0 ? (
          <div class="text-center py-20 bg-white rounded-2xl shadow-card">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            <p class="text-gray-500 text-lg">Chưa có bài viết nào.</p>
          </div>
        ) : (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {posts.map((post) => (
              <article class="group bg-white rounded-xl shadow-card overflow-hidden hover:shadow-xl transition-all border border-gray-100 flex flex-col">
                {post.image ? (
                  <div class="relative overflow-hidden h-48">
                    <img
                      src={post.image}
                      alt={post.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                      decoding="async"
                    />
                    {post.featured && (
                      <div class="absolute top-3 right-3">
                        <svg class="w-6 h-6 text-yellow-400 drop-shadow-lg" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                      </div>
                    )}
                  </div>
                ) : (
                  <div class="h-48 bg-gradient-to-br from-taisan/10 to-taisan-cream flex items-center justify-center">
                    <svg class="w-16 h-16 text-taisan/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  </div>
                )}
                <div class="p-6 flex-1 flex flex-col">
                  <div class="flex items-center gap-2 mb-3 flex-wrap">
                    <span class="text-xs font-medium text-taisan bg-taisan/10 px-3 py-1 rounded-full">
                      {post.category}
                    </span>
                    <span class="text-xs text-gray-500 flex items-center gap-1">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                      {new Date(post.date).toLocaleDateString('vi-VN')}
                    </span>
                    <span class="text-xs text-gray-500 flex items-center gap-1">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {calculateReadingTime(post.content)} phút
                    </span>
                  </div>
                  <h2 class="text-lg font-serif font-semibold text-gray-900 mb-2 group-hover:text-taisan transition-colors line-clamp-2">
                    {post.title}
                  </h2>
                  <p class="text-gray-600 mb-4 line-clamp-3 text-sm flex-1">
                    {post.description}
                  </p>
                  <div class="flex items-center justify-between pt-4 border-t border-gray-100">
                    <span class="text-xs text-gray-500 truncate">Bởi {post.author}</span>
                    <a
                      href={`/blog/${post.slug}`}
                      class="text-taisan hover:text-taisan-light font-medium inline-flex items-center gap-1 transition-colors text-sm group"
                    >
                      Đọc thêm
                      <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        )}
      </section>

      <!-- Back to Home -->
      <div class="mt-16 text-center">
        <a
          href="/"
          class="inline-flex items-center gap-2 bg-taisan hover:bg-taisan-light text-white font-semibold py-3 px-8 rounded-lg transition-all duration-300 shadow-md hover:shadow-lg"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Về trang chủ
        </a>
      </div>
    </div>
  </div>
</BaseLayout>

